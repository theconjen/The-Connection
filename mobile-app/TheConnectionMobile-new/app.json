{
  "expo": {
    "name": "The Connection",
    "slug": "the-connection",
    "version": "1.1.1",
    "orientation": "portrait",
    "icon": "./assets/Icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "theconnection",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#EDE8DF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.theconnection.mobile",
      "buildNumber": "4",
      "associatedDomains": [
        "applinks:theconnection.app",
        "applinks:www.theconnection.app"
      ],
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "The Connection needs your location to show nearby events and communities.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "The Connection needs your location to show nearby events and communities.",
        "NSCameraUsageDescription": "The Connection needs access to your camera to upload photos for your profile and posts.",
        "NSPhotoLibraryUsageDescription": "The Connection needs access to your photo library to upload photos for your profile and posts.",
        "NSPhotoLibraryAddUsageDescription": "The Connection needs access to save photos to your library.",
        "NSCalendarsUsageDescription": "The Connection needs access to your calendar to add events you're attending.",
        "NSUserNotificationsUsageDescription": "The Connection needs to send you notifications about community posts, events, and messages.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSAllowsLocalNetworking": true
        },
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "versionCode": 4,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a2a4a"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR",
        "android.permission.NOTIFICATIONS",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "app.theconnection.mobile",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "theconnection.app",
              "pathPrefix": "/a"
            },
            {
              "scheme": "https",
              "host": "theconnection.app",
              "pathPrefix": "/e"
            },
            {
              "scheme": "https",
              "host": "theconnection.app",
              "pathPrefix": "/p"
            },
            {
              "scheme": "https",
              "host": "theconnection.app",
              "pathPrefix": "/u"
            },
            {
              "scheme": "https",
              "host": "theconnection.app",
              "pathPrefix": "/reset-password"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "The Connection needs access to your photos to share images in posts."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "The Connection needs your location to show nearby events and add location to posts.",
          "locationWhenInUsePermission": "The Connection needs your location to show nearby events and add location to posts."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#1a2a4a"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1"
          },
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true
          }
        }
      ],
      "@react-native-community/datetimepicker",
      "expo-font",
      "./plugins/withRemoveBundleCompression"
    ],
    "extra": {
      "apiBase": "https://api.theconnection.app",
      "router": {
        "origin": "https://app.theconnection.app"
      },
      "eas": {
        "projectId": "c11dcfad-026c-4c8d-8dca-bec9e2bc049a"
      },
      "sentryDsn": "https://50195a543d2fcd9402cf365144b55262@o4510395566718976.ingest.us.sentry.io/4510395580219392",
      "sentryOrg": "the-connection",
      "sentryProject": "the-connection"
    },
    "updates": {
      "url": "https://u.expo.dev/c11dcfad-026c-4c8d-8dca-bec9e2bc049a"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "owner": "the-connection-app"
  }
}
