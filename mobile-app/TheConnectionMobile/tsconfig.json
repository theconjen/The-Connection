{
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",
    "lib": [
      "esnext"
    ],
    "jsx": "react-native",
    "strict": false,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": [
      "react-native"
    ],
    "paths": {
      "@connection/shared": [
        "../../packages/shared/src"
      ],
      "@connection/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@connection/ui": [
        "../../packages/ui/src"
      ],
      "@connection/ui/*": [
        "../../packages/ui/src/*"
      ],
      "shared-env": [
        "./src/env.native"
      ]
    }
  },
  "include": [
    "src/**/*",
    "app/**/*",
    "../../packages/shared/src/**/*",
    "../../packages/ui/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
