{
  "compilerOptions": {
    "types": ["nativewind/types", "node"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@connection/shared": ["../../packages/shared/src"],
      "@connection/shared/*": ["../../packages/shared/src/*"],
      "@connection/ui": ["../../packages/ui/src"],
      "@connection/ui/*": ["../../packages/ui/src/*"],
      "shared-env": ["./src/env.native"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "src/**/*",
    "app/**/*"
  ]
}
