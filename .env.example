# The Connection - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection string (Neon serverless recommended)
DATABASE_URL=postgresql://user:password@host/database

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here

# JWT secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here

# Node environment (development | production)
NODE_ENV=development

# Server port (default: 5000)
PORT=5000

# Use database for sessions (recommended: true)
USE_DB=true

# Cookie security settings (true in production, false in development)
# ⚠️ PRODUCTION: Set to true in Render dashboard
COOKIE_SECURE=false

# Vite API base (for local development)
VITE_API_BASE=/api

# ============================================================================
# EMAIL DELIVERY
# ============================================================================
# Resend API Key (https://resend.com)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM=noreply@yourdomain.com

# AWS SES (optional alternative to Resend)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=

# SendGrid (optional alternative)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# ============================================================================
# FILE STORAGE (Google Cloud Storage)
# ============================================================================
# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# GCS Bucket name
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name

# Service account credentials (path to JSON file)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# OR base64-encoded service account JSON
GOOGLE_APPLICATION_CREDENTIALS_BASE64=

# ============================================================================
# GOOGLE MAPS API
# ============================================================================
# Google Maps Geocoding API Key
# Enable Geocoding API in your Google Cloud project
# ⚠️ PRODUCTION: Set this to enable full location search
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================================================
# SENTRY ERROR TRACKING
# ============================================================================
# Server-side Sentry configuration
# Get your DSN from https://sentry.io
SENTRY_DSN=https://your-key@o123456.ingest.sentry.io/123456
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_SEND_DEFAULT_PII=false
SENTRY_DEBUG=false
SENTRY_RELEASE=1.0.0

# Client-side Sentry configuration (Vite)
# Use the same DSN or create a separate Sentry project for client-side errors
VITE_SENTRY_DSN=https://your-key@o123456.ingest.sentry.io/123456
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_RELEASE=1.0.0

# ============================================================================
# DOMAIN CONFIGURATION
# ============================================================================
# ⚠️ PRODUCTION: Update these to match your actual deployment URLs
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ============================================================================
# OPTIONAL: ANTHROPIC AI
# ============================================================================
# Anthropic API key for AI features
ANTHROPIC_API_KEY=
