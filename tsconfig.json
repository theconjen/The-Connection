{
  "include": [
    "client/src/**/*",
    "packages/shared/src/**/*",
    "packages/ui/src/**/*",
    "shared/**/*",
    "server/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    "server/seed*.ts",
    "mobile-app",
    "**/*.native.ts",
    "**/*.native.tsx",
    "**/*.native.d.ts",
    "mobile-app/**",
    "packages/*/src/**/native/**"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": false,
    "noImplicitAny": false,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    
    "downlevelIteration": true,
    "target": "ES2018",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "./client/src/*"
      ],
      "@connection/shared": [
        "./packages/shared/src"
      ],
      "@connection/shared/*": [
        "./packages/shared/src/*"
      ],
      "@connection/ui": [
        "./packages/ui/src"
      ],
      "@connection/ui/*": [
        "./packages/ui/src/*"
      ],
      "@shared/*": [
        "./packages/shared/src/*"
      ],
      "@assets/*": [
        "./client/src/assets/*"
      ]
    }
  },
  
}
