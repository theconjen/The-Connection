{
  "include": [
    "client/src/**/*",
    "packages/shared/src/**/*",
    "packages/ui/src/**/*",
    "shared/**/*",
    "server/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    "server/seed*.ts",
    "mobile-app",
    "**/*.native.ts",
    "**/*.native.tsx",
    "**/*.native.d.ts",
    "mobile-app/**",
    "packages/*/src/**/native/**",
    "server/debug-data.ts",
    "server/check-database-status.ts",
    "server/check-user-profile.ts",
    "server/cleanup-old-communities.ts",
    "server/test-direct-update.ts",
    "server/scripts/check-storage.ts",
    "server/scripts/debug-feed.ts",
    "server/scripts/request-feed.ts",
    "server/scripts/test-category-filter.ts",
    "server/scripts/debug-communities.ts",
    "server/test-recommendations.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": false,
    "noImplicitAny": false,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "target": "ES2018",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "types": ["node"],
    "paths": {
      "@/*": [
        "./client/src/*"
      ],
      "@connection/shared": [
        "./packages/shared/src"
      ],
      "@connection/shared/*": [
        "./packages/shared/src/*"
      ],
      "@connection/ui": [
        "./packages/ui/src"
      ],
      "@connection/ui/*": [
        "./packages/ui/src/*"
      ],
      "@shared/*": [
        "./packages/shared/src/*"
      ],
      "@assets/*": [
        "./client/src/assets/*"
      ]
    }
  },
  "extends": "expo/tsconfig.base"
}
