# The Connection - Environment Variables
# ⚠️ NEVER commit this file with real values to git!
# Copy this to .env and fill in your actual values

# ========================================
# DATABASE
# ========================================

# PostgreSQL Database URL (REQUIRED)
# Get this from your Neon dashboard
DATABASE_URL=postgresql://neondb_owner:npg_ItslJ16LMvUg@ep-hidden-band-adzjfzr3-pooler.c-2.us-east-1.aws.neon.tech/neondb?sslmode=require

# ========================================
# SECURITY SECRETS (REQUIRED IN PRODUCTION)
# ========================================

# Session secret for Express sessions
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-here-generate-with-openssl

# JWT secret for token authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here-generate-with-openssl

# ========================================
# APPLICATION SETTINGS
# ========================================

# Node environment (development | production)
NODE_ENV=development

# Server port (default: 3000)
PORT=3000

# Use database for sessions (recommended: true)
USE_DB=true

# Cookie security settings (true in production, false in development)
COOKIE_SECURE=false

# Vite API base (for local development)
VITE_API_BASE=/api

# Expo EAS Project ID
EXPO_PUBLIC_EAS_PROJECT_ID=c11dcfad-026c-4c8d-8dca-bec9e2bc049a

# ========================================
# ADMIN CREDENTIALS (FOR SETUP SCRIPTS)
# ========================================

# Admin user credentials (only used when running admin creation scripts)
# NEVER commit these values to git
ADMIN_USERNAME=
ADMIN_EMAIL=
ADMIN_PASSWORD=

# For password update script
NEW_ADMIN_PASSWORD=

# ========================================
# EMAIL CONFIGURATION (Optional but recommended)
# ========================================

# Email provider toggles
ENABLE_REAL_EMAIL=false
FORCE_EMAIL_MOCK_MODE=false
EMAIL_FROM=

# AWS SES Configuration (for sending emails)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=

# SendGrid (alternative to AWS SES)
SENDGRID_API_KEY=

# Resend (alternative to AWS SES)
RESEND_API_KEY=

# ========================================
# STORAGE CONFIGURATION (Optional)
# ========================================

# Google Cloud Storage (for file uploads)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_STORAGE_BUCKET=
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_APPLICATION_CREDENTIALS_BASE64=
PUBLIC_OBJECT_SEARCH_PATHS=
PRIVATE_OBJECT_DIR=

# ========================================
# EXTERNAL SERVICES (Optional)
# ========================================

# Sentry error tracking (recommended for production)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0
VITE_SENTRY_DSN=
VITE_SENTRY_TRACES_SAMPLE_RATE=0.0

# Domain configuration
APP_DOMAIN=
BASE_URL=

# Redis (optional)
REDIS_URL=

# ========================================
# OPTIONAL SETTINGS
# ========================================

# Enable debug logging
DEBUG=false

# Rate limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100
