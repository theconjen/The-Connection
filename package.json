{
  "name": "the-connection",
  "type": "module",
  "scripts": {
    "dev": "pnpm -C server run dev",
    "dev:client": "pnpm -C client run dev",
    "dev:server": "pnpm -C server run dev",
    "start:server": "NODE_ENV=production pnpm --filter server exec tsx index.ts",
    "start:server:dev": "pnpm --filter server exec tsx watch index.ts",
    "build:client": "pnpm -C client run build",
    "build:server": "pnpm -C server run build",
    "build": "pnpm run build:client && pnpm run build:server",
    "postinstall": "node -e \"import('./scripts/ensure-assets.js')\" && node -e \"import('./scripts/apply-patches.js')\"",
    "test:api": "vitest run tests/api",
    "eas": "cd ../TheConnectionMobile-standalone && pnpm dlx eas-cli",
    "android": "cd ../TheConnectionMobile-standalone && npx expo run:android",
    "ios": "cd ../TheConnectionMobile-standalone && npx expo run:ios",
    "mobile": "cd ../TheConnectionMobile-standalone && npx expo start",
    "clean:logs": "node scripts/remove-console-logs.cjs",
    "clean:logs:check": "node scripts/remove-console-logs.cjs --dry-run",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "prepare": "node -e \"try { require('husky').default.install() } catch (e) {}\"",
    "bots:create": "tsx server/bots/create-bot-users.ts",
    "bots:bible": "tsx server/bots/bible-verse-bot.ts",
    "bots:quotes": "tsx server/bots/theology-quote-bot.ts",
    "bots:scheduler": "tsx server/bots/scheduler.ts",
    "db:push": "drizzle-kit push --force",
    "db:generate": "drizzle-kit generate"
  },
